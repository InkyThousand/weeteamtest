{% extends 'base.html.twig' %}
{% block body %}
        <h2>Users</h2>

        <table class="table table-dark">
                <thead>
                <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Dossier number</th>
                        <th scope="col"></th>
                </tr>
                </thead>
                <tbody>

                {% for user in users %}
                        <tr>
                                <th scope="row">{{ user.id }}</th>
                                <td>{{ user.name }}</td>
                                <td>{{ user.dossierNumber }}</td>
                                <td>
                                        <a class="btn btn-primary" href="{{ path('edit_user', {'id' : user.id}) }}">Edit</a>
                                </td>
                        </tr>
                {% endfor %}
                </tbody>
        </table>
{% endblock %}